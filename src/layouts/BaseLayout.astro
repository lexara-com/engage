---
interface Props {
  title: string;
  description?: string;
  image?: string;
  showNavigation?: boolean;
}

const { title, description = "AI-powered legal client intake platform", image = "/lexara-og.jpg", showNavigation = true } = Astro.props;

// Get authentication status from Astro.locals (set by middleware)
const user = Astro.locals.user;
const isAuthenticated = Astro.locals.isAuthenticated;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={Astro.url}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={image}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={Astro.url}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={image}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Official Brand Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
  
  <style>
    /* Ensure no purple backgrounds appear */
    html, body {
      background-color: white !important;
    }
    /* Ensure proper layout structure */
    html {
      height: 100%;
    }
    body {
      min-height: 100%;
      display: flex;
      flex-direction: column;
    }
    /* Remove any purple gradients from main element */
    main {
      background: transparent !important;
      background-image: none !important;
    }
    /* Remove purple from any gradient classes */
    [class*="from-purple"],
    [class*="to-purple"],
    [class*="via-purple"],
    [class*="bg-purple"] {
      background: white !important;
    }
  </style>
</head>
<body class="font-body antialiased bg-white text-lexara-darkNavy min-h-screen">
  {showNavigation && (
    <header class="fixed top-0 w-full z-50 bg-lexara-pureWhite border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <img src="/lexara-logo.svg" alt="Lexara" class="h-8 w-auto">
            </a>
          </div>
          
          <div class="hidden md:flex items-center space-x-8">
            {isAuthenticated ? (
              <>
                <a href="/firm/dashboard" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Dashboard</a>
                <a href="/firm/conversations" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Conversations</a>
                <a href="/firm/users" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Users</a>
                <a href="/firm/settings" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Settings</a>
              </>
            ) : (
              <>
                <a href="/features" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Features</a>
                <a href="/pricing" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Pricing</a>
                <a href="/demo" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Demo</a>
                <a href="/contact" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">Contact</a>
              </>
            )}
          </div>

          <div class="flex items-center space-x-4">
            {isAuthenticated && user ? (
              <>
                <span class="text-lexara-lightNavy font-medium">{user.email}</span>
                <a href="/firm/logout" class="bg-lexara-mahogany text-lexara-pureWhite px-6 py-2.5 rounded-lg hover:bg-red-700 transition-colors font-semibold">
                  Sign Out
                </a>
              </>
            ) : (
              <>
                <a href="/firm/login" class="text-lexara-lightNavy hover:text-lexara-darkNavy transition-colors font-semibold">
                  Sign In
                </a>
                <a href="/firm/signup" class="bg-lexara-mahogany text-lexara-pureWhite px-6 py-2.5 rounded-lg hover:bg-red-700 transition-colors font-semibold">
                  Get Started
                </a>
              </>
            )}
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="text-lexara-gray hover:text-lexara-primary">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </nav>
    </header>
  )}

  <div class="flex flex-col min-h-screen w-full">
    <main class={showNavigation ? "pt-16 flex-grow" : "flex-grow"}>
      <slot />
    </main>

    <footer class="bg-lexara-darkNavy text-lexara-pureWhite mt-auto relative">
    <div class="absolute inset-0 bg-cover bg-center opacity-10" style="background-image: url('/lexara_pattern.jpg');"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <div class="mb-4">
            <img src="/lexara-logo.svg" alt="Lexara" class="h-8 w-auto filter brightness-0 invert">
          </div>
          <p class="text-gray-300 mb-6">
            AI-powered legal client intake platform that transforms how law firms interact with potential clients.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-300 hover:text-white transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
              </svg>
            </a>
            <a href="#" class="text-gray-300 hover:text-white transition-colors">
              <span class="sr-only">LinkedIn</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold mb-4">Product</h3>
          <ul class="space-y-2">
            <li><a href="/features" class="text-gray-300 hover:text-white transition-colors">Features</a></li>
            <li><a href="/pricing" class="text-gray-300 hover:text-white transition-colors">Pricing</a></li>
            <li><a href="/demo" class="text-gray-300 hover:text-white transition-colors">Demo</a></li>
            <li><a href="/integrations" class="text-gray-300 hover:text-white transition-colors">Integrations</a></li>
          </ul>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold mb-4">Support</h3>
          <ul class="space-y-2">
            <li><a href="/help" class="text-gray-300 hover:text-white transition-colors">Help Center</a></li>
            <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
            <li><a href="/privacy" class="text-gray-300 hover:text-white transition-colors">Privacy</a></li>
            <li><a href="/terms" class="text-gray-300 hover:text-white transition-colors">Terms</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-300">
        <p>&copy; 2024 Lexara Legal Technologies. All rights reserved.</p>
      </div>
    </div>
  </footer>
  </div>
  
  <!-- Session Helper -->
  <script>
    // Session Helper for Lexara Firm Portal
    window.LexaraSession = {
      getSession() {
        const cookies = {};
        document.cookie.split(';').forEach(cookie => {
          const [name, value] = cookie.trim().split('=');
          if (name && value) {
            cookies[name] = value;
          }
        });

        const sessionCookie = cookies['firm_session'];
        if (!sessionCookie) return null;

        try {
          const session = JSON.parse(decodeURIComponent(sessionCookie));
          const now = Math.floor(Date.now() / 1000);
          if (session.exp && session.exp < now) {
            console.log('Session expired');
            return null;
          }
          return session;
        } catch (error) {
          console.error('Failed to parse session:', error);
          return null;
        }
      },

      isAuthenticated() {
        const session = this.getSession();
        return session && session.isAuthenticated === true;
      },

      refreshSession() {
        const session = this.getSession();
        if (!session) return false;

        session.exp = Math.floor(Date.now() / 1000) + (24 * 60 * 60);
        
        const cookieOptions = [
          `firm_session=${encodeURIComponent(JSON.stringify(session))}`,
          'path=/',
          `max-age=${24 * 60 * 60}`,
          'samesite=lax'
        ];
        
        if (window.location.protocol === 'https:') {
          cookieOptions.push('secure');
        }
        
        document.cookie = cookieOptions.join('; ');
        console.log('Session refreshed');
        return true;
      }
    };

    // Refresh session on navigation to keep it active
    if (LexaraSession.isAuthenticated()) {
      LexaraSession.refreshSession();
    }
  </script>
</body>
</html>