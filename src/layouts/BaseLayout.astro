---
export interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
}

const { title, description = "Engage - Professional Legal Consultation", bodyClass = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Meta tags for professional legal site -->
  <meta name="robots" content="noindex, nofollow" />
  <meta name="theme-color" content="rgb(30, 43, 59)" />
  
  <!-- Mobile optimizations -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta name="apple-mobile-web-app-title" content="Engage Legal" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="msapplication-tap-highlight" content="no" />
  
  <!-- PWA manifest (optional for future enhancement) -->
  <link rel="manifest" href="/manifest.json" />
</head>
<body class={`h-full bg-lexara-beige font-figtree ${bodyClass}`}>
  <slot />
  
  <!-- Client-side JavaScript for enhanced interactivity -->
  <script>
    // Basic client-side utilities
    window.addEventListener('load', () => {
      // Add any global client-side functionality here
      console.log('Engage UI loaded');
    });
  </script>
</body>
</html>

<style>
  /* Custom scrollbar for modern browsers */
  ::-webkit-scrollbar {
    width: 6px;
  }
  
  ::-webkit-scrollbar-track {
    background: rgb(243, 240, 237);
  }
  
  ::-webkit-scrollbar-thumb {
    background: rgb(198, 216, 219);
    border-radius: 3px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: rgb(59, 87, 108);
  }
  
  /* Firefox scrollbar */
  html {
    scrollbar-width: thin;
    scrollbar-color: rgb(198, 216, 219) rgb(243, 240, 237);
  }
</style>