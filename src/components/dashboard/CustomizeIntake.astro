---
interface PracticeArea {
  id: string;
  name: string;
  icon: string;
  questionsCount: number;
  lastUpdated?: string;
  isEnabled: boolean;
}

interface Props {
  practiceAreas?: PracticeArea[];
}

// TODO: Replace with real data from API
const { practiceAreas = [
  {
    id: '1',
    name: 'Personal Injury',
    icon: '⚕️',
    questionsCount: 24,
    lastUpdated: '2 days ago',
    isEnabled: true
  },
  {
    id: '2',
    name: 'Employment Law',
    icon: '💼',
    questionsCount: 18,
    lastUpdated: '1 week ago',
    isEnabled: true
  },
  {
    id: '3',
    name: 'Family Law',
    icon: '👨‍👩‍👧‍👦',
    questionsCount: 32,
    lastUpdated: '3 days ago',
    isEnabled: true
  },
  {
    id: '4',
    name: 'Criminal Defense',
    icon: '⚖️',
    questionsCount: 21,
    lastUpdated: '5 days ago',
    isEnabled: false
  },
  {
    id: '5',
    name: 'Business Law',
    icon: '🏢',
    questionsCount: 27,
    lastUpdated: '1 week ago',
    isEnabled: true
  }
]} = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">Customize Intake</h2>
        <p class="text-sm text-gray-600 mt-1">Configure practice areas and intake questions</p>
      </div>
      <button class="inline-flex items-center px-3 py-1.5 bg-lexara-darkNavy text-white text-sm font-medium rounded-md hover:bg-opacity-90 transition-colors">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Practice Area
      </button>
    </div>
  </div>
  
  <div class="p-6">
    <div class="space-y-3">
      {practiceAreas.map((area) => (
        <div class="border border-gray-200 rounded-lg p-4 hover:border-gray-300 transition-colors">
          <div class="flex items-start justify-between">
            <div class="flex items-start space-x-3">
              <div class="text-2xl">{area.icon}</div>
              <div class="flex-1">
                <div class="flex items-center gap-2">
                  <h3 class="text-sm font-medium text-gray-900">{area.name}</h3>
                  <span class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${
                    area.isEnabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'
                  }`}>
                    {area.isEnabled ? 'Active' : 'Inactive'}
                  </span>
                </div>
                <div class="flex items-center gap-4 mt-1">
                  <span class="text-xs text-gray-500">{area.questionsCount} questions</span>
                  {area.lastUpdated && (
                    <>
                      <span class="text-xs text-gray-400">•</span>
                      <span class="text-xs text-gray-500">Updated {area.lastUpdated}</span>
                    </>
                  )}
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <button class="text-gray-400 hover:text-gray-600 p-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-gray-400 hover:text-gray-600 p-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-6 flex justify-center">
      <button class="text-sm text-lexara-darkNavy hover:text-lexara-lightNavy font-medium">
        Manage all practice areas →
      </button>
    </div>
  </div>
</div>