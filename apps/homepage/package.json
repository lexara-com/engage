{
  "name": "homepage",
  "version": "0.1.0",
  "description": "Lexara.app homepage - Law firm signup and marketing site",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "deploy:dev": "wrangler deploy --env dev",
