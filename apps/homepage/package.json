  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "@playwright/test": "^1.53.2",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "axe-playwright": "^2.0.1",
