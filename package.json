{
  "name": "engage-legal-ai",
  "version": "0.1.0",
  "description": "Engage - AI-powered legal client intake platform",
  "main": "src/agent/main-worker.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ui": "astro dev",
    "dev:admin": "wrangler dev --config wrangler-admin.toml",
    "dev:platform": "wrangler dev --config wrangler-platform.toml",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && wrangler build",
    "build:ui": "astro build",
    "build:admin": "wrangler build --config wrangler-admin.toml",
    "build:platform": "wrangler build --config wrangler-platform.toml",
    "preview:ui": "astro preview",
    "deploy": "wrangler deploy",
    "deploy:admin": "wrangler deploy --config wrangler-admin.toml",
    "deploy:platform": "wrangler deploy --config wrangler-platform.toml",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:test": "wrangler deploy --env test",
    "deploy:production": "wrangler deploy --env production",
    "deploy:admin:dev": "wrangler deploy --config wrangler-admin.toml --env dev",
    "deploy:admin:test": "wrangler deploy --config wrangler-admin.toml --env test",
    "deploy:admin:production": "wrangler deploy --config wrangler-admin.toml --env production",
    "deploy:platform:dev": "wrangler deploy --config wrangler-platform.toml --env dev",
    "deploy:platform:test": "wrangler deploy --config wrangler-platform.toml --env test",
    "deploy:platform:production": "wrangler deploy --config wrangler-platform.toml --env production",
    "deploy:all:dev": "npm run deploy:dev && npm run deploy:platform:dev",
    "deploy:all:test": "npm run deploy:test && npm run deploy:platform:test",
    "deploy:all:production": "npm run deploy:production && npm run deploy:platform:production",
    "deploy:mcp:dev": "npx wrangler deploy --config wrangler-goal-tracker.toml --env dev && npx wrangler deploy --config wrangler-conflict-checker.toml --env dev && npx wrangler deploy --config wrangler-additional-goals.toml --env dev",
    "deploy:mcp:production": "npx wrangler deploy --config wrangler-goal-tracker.toml --env production && npx wrangler deploy --config wrangler-conflict-checker.toml --env production && npx wrangler deploy --config wrangler-additional-goals.toml --env production",
    "validate:config": "./scripts/validate-config.sh",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "vitest run tests/e2e",
    "test:e2e:watch": "vitest watch tests/e2e",
    "test:e2e:debug": "DEBUG_TESTS=true vitest run tests/e2e",
    "test:e2e:headed": "HEADLESS=false vitest run tests/e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@astrojs/node": "^8.3.4",
    "@astrojs/tailwind": "^5.1.2",
    "@cloudflare/workers-types": "^4.20240909.0",
    "@types/node": "^20.14.0",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro": "^4.16.7",
    "eslint": "^8.57.0",
    "puppeteer": "^24.10.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0",
    "wrangler": "^4.20.3"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^11.0.0",
    "@microlabs/otel-cf-workers": "^1.0.0-rc.49",
    "@opentelemetry/api": "^1.9.0",
    "ulid": "^2.3.0"
  },
  "keywords": [
    "legal-tech",
    "ai",
    "cloudflare-workers",
    "client-intake",
    "conflict-detection"
  ],
  "author": "Lexara",
  "license": "PROPRIETARY"
}
